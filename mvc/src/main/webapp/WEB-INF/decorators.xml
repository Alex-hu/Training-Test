<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/nodecorate/*</pattern>
		<pattern>/styles/*</pattern>
		<pattern>/scripts/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/dojo/*</pattern>
		<pattern>/struts/*</pattern>
		<pattern>/login.jsp*</pattern>
	</excludes>
	<decorator name="article" page="article.jsp">
		<pattern>/tree/see/**</pattern>
		<pattern>/article/tlist/**</pattern>
		<pattern>/article/tdetail/**</pattern>
	</decorator>
	<decorator name="main" page="main.jsp">
		<pattern>/*</pattern>
		<pattern>/security/*</pattern>
		<pattern>/system/*</pattern>
	</decorator>

</decorators>
